<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Invest4me.Views.Pages.Login">
    <StackLayout Margin="15,0,15,0">
        <StackLayout >
            <Entry Placeholder="Phone number" HorizontalOptions="FillAndExpand"
                   FontSize="15" Text="{Binding phoner}"/>
            <Entry Placeholder="Password" HorizontalOptions="FillAndExpand"
                   FontSize="15" IsPassword="True" Text="{Binding passwordr}"/>
            <Button Text="Login" Command="{Binding .}"/>
        </StackLayout>
    </StackLayout>
  
</ContentPage>